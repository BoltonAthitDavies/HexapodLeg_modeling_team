<?xml version="1.0" encoding="UTF-8"?>
<plotjuggler>
  <data_streams>
    <ROS2 name="ros2" default="true" />
  </data_streams>
  <topics>
    <topic name="/joint_states" type="sensor_msgs/msg/JointState" />
  </topics>
  <layouts>
    <layout name="Joint Position & Velocity">
      <plot title="Joint Positions">
        <curve topic="/joint_states" field="position[0]" label="rev1" />
        <curve topic="/joint_states" field="position[1]" label="rev_2" />
      </plot>
      <plot title="Joint Velocities">
        <curve topic="/joint_states" field="velocity[0]" label="rev1" />
        <curve topic="/joint_states" field="velocity[1]" label="rev_2" />
      </plot>
    </layout>
  </layouts>
</plotjuggler>
